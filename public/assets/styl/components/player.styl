#main_player
	position relative
	padding 1rem
	background rgba(0, 0, 0, 0.7)
	display block
	user-select none
	z-index 1

	@media screen and (min-width: $desktop-breakpoint)
		border-radius 1rem

	.player_header
		position absolute
		width 100%
		top -3rem
		left 0
		user-select none

		span
			cursor pointer
			border-radius .3rem
			padding 0.5rem 1rem
			background rgba(0, 0, 0, 0.9)
			font-weight bold
			font-size 0.85rem
			text-transform uppercase
			margin-right 0.5rem
			display inline-block
			opacity 0.8
			text-align center

			&:hover
				background: rgba(0, 0, 0, 1)

			&.display-queue
				display none

				@media screen and (min-width: $tablet-breakpoint)
					display inline-block

			&.hideVideo-el
			&.skip-el
				float right
				margin-right 0

				i
					vertical-align middle
					font-size 1.3rem

				&.active
					color #fff
					background #000

			&.display-mods-controls
				display none

			&.edit-room
				position relative
				display none

				i
					position absolute
					font-size 2rem
					line-height 1.15
					left 0

			&.active
				background $accent-color
				color: #000

	.play-song-link-container
		bottom -8.5rem
		transform translateX(-50%)
		backface-visibility hidden
		transform-style preserve-3d
		left 50%
		width 100%
		position absolute
		text-align center

		@media screen and (min-width: $tablet-breakpoint)
			bottom -4rem

		.play-song-link
		.play-song-link-browser
			padding 1rem 2rem
			border-radius 1rem
			line-height 1.7
			width auto
			cursor pointer
			background rgba(0, 0, 0, 0.8)
			color #fff
			display none

			&.active-queue-display
				display block

				@media screen and (min-width: $tablet-breakpoint)
					display inline-block

			&.error-queue
				bottom -6rem

			i
				color $accent-color
				margin-right 0.5rem
				display inline-block

			.queue-info
				display none
				position absolute
				top -0.3rem
				right -0.3rem
				background $accent-color
				width 1.7rem
				height 1.7rem
				text-align center
				font-weight bold
				color $background-primary-color
				border-radius 100%

		.play-song-link-browser
			display block
			margin-bottom 0.5rem

			@media screen and (min-width: $tablet-breakpoint)
				margin-right 0.5rem
				margin-bottom 0
				display inline-block

	#custom_iframe_embed_error
	.playbtn-el
		position absolute
		top 50%
		left 50%
		padding 1rem 1.5rem
		text-transform uppercase
		font-weight bold
		cursor pointer
		z-index 99999
		display none
		background $accent-color
		transform translate(-50%, -50%)
		transform-style preserve-3d
		backface-visibility hidden

	.loading-el
		display block
		position absolute
		text-align center
		background #000
		width 100%
		height 100%
		text-transform uppercase
		opacity 0.6

		.loading-el-wrapper
			position relative
			top 50%
			transform translateY(-50%)
			transform-style preserve-3d
			backface-visibility hidden

			span
				display block
				margin-top 2rem

	.placeholder
		display none
		position absolute
		text-align center
		font-weight bold
		width 100%
		left 0
		top 50%
		transform translateY(-50%)
		transform-style preserve-3d
		backface-visibility hidden

	.player_container
	#mods-controllers
	#room-info-display
		display none
		padding-bottom 56.25%
		position relative
		z-index 10

	.player_container
		display block

		#room-main-player-container
			position absolute
			height 100%
			width 100%
			top 0
			left 0

			&::before
				@extend [class*=" icon-"]
				visibility visible
				cursor default
				@extend .icon-eye-blocked:before
				position absolute
				top 50%
				left 50%
				transform translate(-50%,-50%)
				line-height 1
				color $meta-color
				opacity .33
				font-size 10rem

			#room-main-player-container-youtube
			#room-main-player-container-soundcloud
				position absolute
				height 100%
				width 100%
				top 0
				left 0
				z-index 10

			.playerElement
				position relative
				width 100%
				height 100%

				&.soundcloud
					overflow hidden

					.artwork
						position relative
						top: 50%
						transform translateY(-50%)
						transform-style preserve-3d
						backface-visibility hidden
						width 100%

					.redirect-link
						position absolute
						bottom 0rem
						right 1rem
						font-size 2.5rem
						color #eee
						text-shadow 0 0 1px #808080
						z-index 100

	#custom_iframe_embed
		display none

		iframe
		#live_embed_player_flash
			position absolute
			height 100%
			width 100%
			top 0
			left 0

	.player_sharing
		margin-top 1rem
		user-select none
		clearfix()

		span
			font-size 1.5rem
			margin-right 1.5rem
			cursor pointer

		.player-controller-container
			float right

			.skip-el
			.hideVideo-el
			.mute
				float left
				cursor pointer
				font-weight bold
				font-size 1rem
				text-transform uppercase

				&.active
					span
						&.icon-eye-unblocked
							display block

						&.icon-eye-blocked
							display none

				i
					display inline-block
					vertical-align text-top
					font-size 1.2rem

				span
					&.icon-eye-unblocked
						display none

					&.icon-eye-blocked
						display block

			.mute
				&.sound-muted
					span
						&.icon-mute
							display block

						&.icon-sound-alt
							display none

				span
					&.icon-mute
						display none

					&.icon-sound-alt
						display block

			span
				display inline-block
				margin-left 0.75rem
				margin-right 0

				&.videoquality-el
					font-size 1.4rem
					text-transform uppercase
					font-weight bold
					top -0.2rem
					position relative
					color $meta-color
					display none
					margin-left: .5rem

					&.active-hd
						color $primary-color

					@media screen and (min-width: $tablet-breakpoint)
						&.show
							display inline-block

			.volume-controller-container
				width 6rem
				vertical-align middle
				margin 0.6rem 0.75rem 0 0.8rem
				float left
				display none

				@media screen and (min-width: $tablet-breakpoint)
					display block

				#volume-div
					width 100%
					height 0.3rem
					margin 0 .2rem 0.6rem 0
					background $meta-color
					border 0
					display block
					cursor pointer
					border-radius 1rem
					position relative

					.ui-slider-handle
						border-radius 100%
						background $primary-color
						border 0
						padding 0
						height 1.2rem
						width 1.2rem
						top -0.4rem
						margin-left -0.55rem
						cursor pointer
						display block
						position absolute
						box-shadow 0px 0px 5px 0px rgba(0, 0, 0, 0.6)

					.ui-slider-range-min
						border-radius 1rem
						height 0.3rem
						background $accent-color

			.refresh-el
				font-size: 1.3rem
				position: relative
				top: -0.15rem
