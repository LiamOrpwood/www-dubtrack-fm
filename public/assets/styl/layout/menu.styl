#main-menu-right
	background blue
	position fixed
	height 100%
	right -25rem
	top 0
	width 20rem
	z-index 1000
	padding 3.6rem 0 6.5rem 0
	backface-visibility hidden
	transform-style preserve-3d
	transition transform 0.2s ease-in-out

	@media screen and (min-width: $tablet-breakpoint)
		padding 3.6rem 0 3.5rem 0
		width 30rem
		right -35rem

	.close-menu
		border-bottom 0
		font-size 1rem
		padding 0.6rem
		position absolute
		left -2.2rem
		line-height 0.5rem
		text-align center
		top 3.6rem
		background $background-dark-color

		span
			font-size: 1em
			color $meta-color

		&:hover
			color $accent-color

	p
		padding 1rem
		color $primary-color
		text-align center

#main-menu-left
	padding 6rem 0 0 0
	background $background-dark-color
	position fixed
	height 100%
	left -14rem
	top 0
	width 12.5rem
	z-index 999999
	transform-style preserve-3d
	backface-visibility hidden
	transition transform 0.2s ease-in-out

	a
		display block
		color $meta-color
		padding 0 1rem
		margin-bottom 0.5rem
		font-size 1rem

		&.close-menu
			border-bottom 0
			font-size 1rem
			padding 0.6rem
			position absolute;
			right 0.5rem
			text-align center
			top 0.5rem

			span
				font-size 1rem

		&.logout-link
			position absolute
			bottom 0.5rem
			left 0
			border-bottom 0
			width 100%
			display none

			span
				display inline-block
				margin-right 0.5rem

		&.room-active-link
			display: none;
			color $accent-color

	.social-links
		margin-top 2rem
		clearfix()

		a
			float left
			width auto
			margin-right 0.5rem
			padding-right 0
			color $primary-color
			font-weight bold
			font-size 1.2rem

.menu-right-in
	#main-menu-right
		transform translateX(-25rem)

		@media screen and (min-width: $tablet-breakpoint)
			transform translateX(-35rem)

.menu-left-in
	#main-menu-left
		transform translateX(14rem)

#mobile-room-menu
	display block
	width 100%
	position absolute
	background $background-primary-color
	top 3.6rem
	left 0
	margin 0
	padding 0
	z-index 99
	clearfix()

	@media screen and (min-width: $desktop-breakpoint)
		display none

	a
		font-size 0.75rem
		font-weight bold
		cursor pointer
		width 50%
		text-align center
		text-transform uppercase
		padding 0.5rem 0.2rem
		float left
		display block
		border-right 1px solid $background-darker-color

		&:last-child
			border-right 0
